{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-recess-order", "stylelint-config-prettier-scss"],
  "rules": {
    "scss/dollar-variable-pattern": [
      "^[A-Z0-9_]+$",
      {
        "ignore": "local"
      }
    ],
    "selector-class-pattern": "^[a-z](|[a-zA-Z0-9]+)$"
  }
}
